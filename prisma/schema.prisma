// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  studentId     String     @unique
  name          String
  password      String
  major         String
  campus        Campus
  isValid       Boolean  @default(false)
  isManaged     Boolean  @default(false)
  activateTime  String   @default("")
  teminatedTime String   @default("")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Reservation {
  id        Int      @id @default(autoincrement())
  userId    Int
  date      String
  start     String
  finish    String
  space     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Class{
  id           Int     @id @default(autoincrement())
  name         Int
  isReserved   Boolean @default(false)
  time         Time @relation(fields:[timeId],references:[id])
  timeId       Int 
}
model Time{
  id           Int     @id @default(autoincrement())
  studyroom     Studyroom?
  classes       Class[]
}
model Studyroom {
  id           Int     @id @default(autoincrement())
  roomNumber   Int 
  roomPassword String @default("0000")
  description  String
  schedule     Time?  @relation(fields: [timeId],references:[id])
  timeId       Int?
}

enum Campus {
  Seoul
  Global
}
