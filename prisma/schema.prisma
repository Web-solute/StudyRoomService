// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  studentId String @unique
  name      String
  password  String
  idCard    String
  major     Major
  email     String @unique
  campus    Campus

  isValid      Boolean       @default(false)
  isManaged    Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  reservations Reservation[]
  member       Reservation[] @relation(name: "reservation") //동반자인 경우 예약
}

//member와 group M:N 관계
//user와 reservations 1:N 관계

model Reservation {
  id     Int    @id @default(autoincrement())
  userId Int
  date   String
  start  Int //시작하는 교시 
  finish Int? //끝나는 교시
  space  Int //roomNumber
  user   User   @relation(fields: [userId], references: [id]) //예약자
  group  User[] @relation(name: "reservation") //동반자 group
}

model Room {
  id           Int     @id @default(autoincrement())
  roomNumber   Int
  roomPassword String?
  description  String
  major        Major
  classes      Class[]
}

model Class {
  id         Int     @id @default(autoincrement())
  name       Int
  isReserved Boolean @default(false)
  room       Room    @relation(fields: [roomId], references: [id])
  roomId     Int
}

enum Campus {
  Seoul
  Global
}

enum Major {
  Computer
  Information_Communication
}
