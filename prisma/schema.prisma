generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  studentId     Int      @unique
  name          String
  password      String
  major         String
  campus        Campus
  isValid       Boolean  @default(false)
  isManaged     Boolean  @default(false)
  activateTime  String   @default("")
  teminatedTime String   @default("")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Reservation {
  id        Int      @id @default(autoincrement())
  userId    Int
  date      String
  start     String
  finish    String
  space     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Studyroom {
  id Int @id @default(autoincrement())
  times Time[]
  description  String
  roomNumber   Int
  roomPassword String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Time{
  id Int @id @default(autoincrement()) 
  name String //이름 1교시 , 2교시
  studyroom Studyroom @relation(fields: [studyroomId], references:[id])
  studyroomId Int  
  description String //각 교시별 정확한 시간 
  isReserved Boolean @default(false)
}


enum Campus {
  Seoul
  Global
}
